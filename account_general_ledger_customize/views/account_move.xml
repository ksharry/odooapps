<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_line_tree_grouped_general_inherit" model="ir.ui.view">
        <field name="name">account.move.line.tree.grouped.misc</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit']" position="after">
                <field name="balance" optional="show"/>
                <field name="cumulated_balance" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='move_id']" position="replace">
                <field name="move_id" optional="show" widget="many2onebutton"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_tree_grouped_partner_inherit" model="ir.ui.view">
        <field name="name">account.move.line.tree.grouped.partner</field>
        <field name="model">account.move.line</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit']" position="after">
                <field name="balance" optional="show"/>
                <field name="cumulated_balance" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>